@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a  class="nav-link text-dark" href="/Profile/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <a href="/Account/LogOut" class="nav-link btn btn-link text-dark">Log out</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Account/register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Account/login">Login</a>
    </li>
}
</ul>
